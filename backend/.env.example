# ===========================================
# Consensus Backend - Environment Variables
# ===========================================
# Copy this file to .env and fill in your values

# --- Deepgram (Speech-to-Text) ---
DEEPGRAM_API_KEY=your_deepgram_api_key_here

# --- Google Cloud Platform ---
GCP_PROJECT_ID=consensus
GCP_REGION=us-central1

# --- Confluent Cloud / Kafka ---
KAFKA_BOOTSTRAP_SERVERS=your_cluster.us-central1.gcp.confluent.cloud:9092
KAFKA_API_KEY=your_confluent_api_key
KAFKA_API_SECRET=your_confluent_api_secret

# Kafka Topics
KAFKA_TOPIC_TRANSCRIPTS=meeting-transcripts
KAFKA_TOPIC_INSIGHTS=analysis-insights

# --- Optional: Local Development ---
# Set to 'development' for local testing, 'production' for Cloud Run
ENVIRONMENT=development
